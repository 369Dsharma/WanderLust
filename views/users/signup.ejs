<% layout("/layouts/boilerplate") %>


<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Sign Up</h3>
        <form method="POST" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
                <!-- for username -->
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" placeholder="Enter Username" type="text" class="form-control" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- for email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" placeholder="Enter Email" type="email" class="form-control" required />
    
            </div>

            <!-- for password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" placeholder="Enter Password" type="password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>

        <p class="mt-3">Already have an account? <a href="/login">Login</a></p>
    </div>
</div>
