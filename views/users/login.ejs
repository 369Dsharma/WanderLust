<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Login</h3>
        <form method="POST" action="/login" novalidate class="needs-validation">
            <div class="mb-3">
                <!-- for username -->
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" placeholder="Enter Username" type="text" class="form-control" required />
            </div>
            <!-- for password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" placeholder="Enter Password" type="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>    
        </form>
        <p class="mt-3">Don't have an account? <a href="/signup">Sign Up</a></p>
    </div>      
</div>

